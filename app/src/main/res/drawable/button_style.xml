<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="#039BE5" />
            <gradient android:angle="-90" android:startColor="#0072B4" android:endColor="#59B1E7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="#0116BB" />
            <solid android:color="#4DA7FF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="#39A8DA" />
            <gradient android:angle="-90" android:startColor="#4291E6" android:endColor="#1E88E5" />
        </shape>
    </item>
</selector>